{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project Structure */
    "rootDir": ".",
    "outDir": "dist",

    /* Interop & Compatibility */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Developer Experience */
    "sourceMap": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
